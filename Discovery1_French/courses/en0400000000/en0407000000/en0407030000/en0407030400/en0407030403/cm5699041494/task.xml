<avalontask>
	<r2data taskid='99999' type='simulation' language='JP' title='Sample Linksys Item' />
	<guitext />
	<variables />

	<textcomponents>
		<component type='text' id='txt_instructions'> 
			<text variable='true' translate='true'>
				<![CDATA[<font face='_sans' size='12'><b>Configuring Encryption and Authentication</b><br><br>In this activity, you will configure authentication.<br>Topology button: Access the network topology.<br>Instructions button: Return to the Instructions window.<br>Browser button (when available): Access the Browser window.<br>Step 1: Using the Browser window access the Linksys GUI<br><ul><li>From the Topology window, click the host to open the Browser window</li><li>Type in the URL http://192.168.1.1</li><li>Use the default password <font face="_typewriter"><dnt>admin</dnt></font> and leave the username blank</li></ul><br>Step 2: Set encryption by configuring the encryption mode and key<br><ul><li>Select the Wireless Security tab</li><li>Set the Security Mode to: <b><dnt>WEP</dnt></b></li><li>Set Key 1 to: <b><dnt>ABC123EF45</dnt></b></li><li>Click Save Settings when complete</li></ul><br>Step 3: Enable authentication using the same shared key set for encryption<br><ul><li>Click the Wireless tab to navigate to the Basic Wireless Settings page</li><li>Select the Advanced Wireless Settings tab</li><li>Change the Authentication Rate to: <b><dnt>Shared Key</dnt></b></li><li>Click Save Settings when complete</li><ul><br>Click the Check button to check your work.</font>]]>
			</text> 
		</component> 

		<component type='text' id='txt_obsdesc'>
			<text variable='true' translate='true'><![CDATA[<B>Configure Encryption and Authentication</B><BR>]]></text>
		</component>

		<component type='text' id='txt_obsgood'>
			<text variable='true' translate='true'><![CDATA[<font face='_sans' size='12'><textformat blockindent='15'>You successfully set wireless security within the linksys GUI. Click Next to continue.</textformat></font><br>]]></text>
		</component>

		<component type='text' id='txt_obsbad'>
			<text variable='true' translate='true'><![CDATA[<font face='_sans' size='12'><textformat blockindent='15'>Incorrect. To set encryption, you must first be on the Wireless Security configuration page. Next, set the Security Mode to <b><dnt>WEP</dnt></b>. Finally type in the shared key specified.<br><br>To enable authentication between the two devices, select the Advanced Wireless Settings tab. Next, in the Authentication Rate drop down box, select: <b><dnt>Shared Key</dnt></b>. This enables authentication between the two devices using the same shared key that was configured for WEP encryption. Be sure to Save Settings after each step. Try again.</textformat></font><br>]]></text>
		</component>

		<component type='text' id='txt_404error'>
			<text variable='true' translate='true'><![CDATA[Error 404: The page you requested was not found on the server. Please check the URL you are trying to access and try again.]]></text>
		</component>

		<component type='text' id='txt_networkerror'>
			<text variable='true' translate='true'><![CDATA[There was an error connecting to the host you specified. Please check your network connection and try again.]]></text>
		</component>

		<component type='text' id='txt_check'>
			<text variable='true' translate='true'><![CDATA[Check]]></text>
		</component>

		<component type='text' id='txt_close'>
			<text variable='true' translate='true'><![CDATA[Close]]></text>
		</component>

		<component type='text' id='txt_host'> 
			<text variable='true' translate='true'><![CDATA[<p align='center'>Host</p>]]></text> 
		</component> 

		<component type='text' id='txt_wrt300n'> 
			<text variable='true' translate='true'><![CDATA[WRT300N]]></text> 
		</component> 
	
		<component type='text' id='txt_title_instructions'> 
			<text variable='true' translate='true'><![CDATA[Instructions]]></text> 
		</component> 

		<component type='text' id='txt_topology'> 
			<text variable='true' translate='true'><![CDATA[Topology]]></text> 
		</component> 

		<component type='text' id='txt_browser'> 
			<text variable='true' translate='true'><![CDATA[Browser]]></text> 
		</component> 
	</textcomponents>

	<graphiccomponents>
		<component type='graphic' id='gr_browser'> 
			<icon x='0' y='0' width='50' height='42' id='icon_browser'> 
				<action event='release' target='hw_host' activity='launchBrowser' window='win_browser' /> 
			</icon>
			<label src='txt_host' x='-45' y='25' width='90' height='35' background='false' />
		</component>

		<component type='graphic' id='gr_linksys'> 
			<icon x='0' y='50' width='30' height='78' id='icon_linksys' /> 
			<label src='txt_wrt300n' x='-30' y='80' width='65' height='20' background='false' />
		</component>

		<component type='graphic' id='gr_line'> 
			<shape type='autoline' strokewidth='3' stroke='#FF0000' id='sh_dotline' />  
		</component>
	</graphiccomponents>

	<hwcomponents>
		<component type='WRT300N' model='none' id='hw_linksys'> 
			<port type='ethernet' number='0' name='WAN0' id='hw_linksys_wan0' fixed='true' />
			<port type='dumbether' number='1' name='LAN1' id='hw_linksys_lan1' fixed='true' />
			<port type='dumbether' number='2' name='LAN2' id='hw_linksys_lan2' fixed='true' />
			<port type='dumbether' number='3' name='LAN3' id='hw_linksys_lan3' fixed='true' />
			<port type='dumbether' number='4' name='LAN4' id='hw_linksys_lan4' fixed='true' />
			<config file='startup-config'> 
				<![CDATA[192.168.1.1,255.255.255.0]]> 
			</config> 
		</component> 
		<component type='host' model='none' id='hw_host'> 
			<port type='ethernet' number='0' name='eth0' id='hw_host_eth0' fixed='true' />
			<config file='startup-config'> 
				<![CDATA[
! Host1 Configuration
ifconfig eth0 ip 192.168.1.100 255.255.255.0
ifconfig eth0 up
ifconfig hostname Management
end
				]]> 
			</config> 
		</component> 

		<component type='link' id='hw_link_host'> 
			<endpoint id='hw_linksys_lan1' /> 
			<endpoint id='hw_host_eth0' /> 
		</component>
	</hwcomponents>

	<presentation delivery='cert'>
		<mainstage bgcolor= '#FFFFFF' theme='ccna' historylog='all' tooltips='true' contextmenu='false' />
		<graphicmap> 
			<map id='icon_browser' src='Computer' location='library' />
			<map id='icon_linksys' src='Linksys' location='library' />
		</graphicmap>

		<window id='none' resize='none' titltetextid='txt_check' width='0' height='0' visible='true' depth='50' x='0' y='0' checkbutton='true' />

		<window id='win_instructions' resize='all' titletextid='txt_title_instructions' width='780' height='380' visible='true' depth='100' x='10' y='10'> 
			<element id='ele_txt_instructions' src='txt_instructions' container='textClip' width='750' html='true' wordwrap='true' /> 
		</window> 

		<window id='win_topology' resize='all' titletextid='txt_topology' visible='false' width='790' height='400' depth='101' y='10' x='10'>
			<element id='ele_host'    src='gr_browser' x='275' y='150' depth='100' /> 
			<element id='ele_linksys' src='gr_linksys' x='475' y='100'  depth='101' /> 
			<element id='ele_line'    src='gr_line'    beginobject='ele_host.icon_browser' endobject='ele_linksys.icon_linksys' depth='10' />
		</window>
		<window id='win_browser' resize='all' titletextid='txt_browser' visible='false' width='800' height='400' depth='202' y='10' x='0' scrolling='none'> 
			<element id='ele_obj_browser' src='unused' container='WebBrowser' /> 
		</window>   
	</presentation>

	<scoring />
</avalontask>