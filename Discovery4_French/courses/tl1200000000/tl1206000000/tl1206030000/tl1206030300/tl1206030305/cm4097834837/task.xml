            <port type="serial" number="1" name="Serial0/1" id="dev_post_s01" fixed="false"/>
         </card>
         <config file="startup-config"> 
<![CDATA[
!
version 12.2
!
hostname Post
!
!
!
interface FastEthernet0/0
 no ip address
 shutdown
!
interface Serial0/0
 ip address 192.168.1.1 255.255.255.0
 clock rate 56000
!
interface Serial0/1
 no ip address
 shutdown
!
!
router eigrp 100
 network 192.168.1.0
 auto-summary
!
!
!
line con 0
line vty 0 4
!
end
]]>
